rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Profile pictures: Users can only read/write their own profile picture
    // Path structure: profile_pictures/{userId}.jpg
    match /profile_pictures/{fileName} {
      // Extract userId from filename (filename is userId.jpg)
      // Users can only access their own profile picture
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && fileName == request.auth.uid + '.jpg';
      allow delete: if isAuthenticated() && fileName == request.auth.uid + '.jpg';
    }
    
    // Product images: Users can read/write product images
    // Path structure: products/{productId}/{timestamp}.jpg
    match /products/{productId}/{fileName} {
      // Helper function to validate image file
      function isValidImageFile() {
        // Check file size (max 5MB)
        return request.resource.size < 5 * 1024 * 1024 &&
               // Check content type is image
               request.resource.contentType.matches('image/.*') &&
               // Check filename extension
               fileName.matches('.*\\.(jpg|jpeg|png|webp)');
      }
      
      // Allow read for authenticated users (users can view products)
      allow read: if isAuthenticated();
      
      // Allow write/delete only if authenticated and file is valid
      // Note: Product ownership validation happens at the application/database level
      // since Storage rules cannot query the database. The database rules ensure
      // only the product owner can create/update products, and the app validates
      // ownership before uploading images.
      allow write: if isAuthenticated() && isValidImageFile();
      allow delete: if isAuthenticated();
    }
    
    // Custom QR codes: Users can only read/write their own QR code
    // Path structure: custom_qr_codes/{userId}.jpg
    match /custom_qr_codes/{userId}.jpg {
      // The userId is extracted from the path segment, not filename
      // Users can only access their own QR code
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && userId == request.auth.uid;
      allow delete: if isAuthenticated() && userId == request.auth.uid;
    }
  }
}

