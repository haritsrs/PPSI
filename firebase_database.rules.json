{
  "rules": {
    ".read": false,
    ".write": false,
    "products": {
      ".read": "auth != null",
      ".write": "auth != null && (
        (!data.exists() && newData.child('createdBy').val() == auth.uid) ||
        data.child('createdBy').val() == auth.uid
      )",
      "$productId": {
        "name": {
          ".validate": "newData.isString() && newData.val().length <= 120"
        },
        "description": {
          ".validate": "!newData.exists() || (newData.isString() && newData.val().length <= 500)"
        },
        "price": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "stock": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "minStock": {
          ".validate": "newData.isNumber() && newData.val() >= 0"
        },
        "$other": {
          ".validate": "true"
        }
      }
    },
    "stockHistory": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "transactions": {
      ".read": "auth != null",
      ".write": "auth != null && newData.child('createdBy').val() == auth.uid"
    },
    "notifications": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "auditLogs": {
      ".read": "auth != null && auth.token.admin == true",
      ".write": "auth != null && newData.child('userId').val() == auth.uid"
    },
    "withdrawals": {
      ".read": "auth != null && auth.token.admin == true",
      ".write": "auth != null"
    }
  }
}

